<!DOCTYPE html>
<html>





<!-- Body Contents -->
<body style="background-color: #152734; overflow-x: hidden;">

<!-- Instruct -->
<h1 class="login-instruct text-center">JumpIn</h1>

<!-- Form Control -->
<%= form_tag login_path, method: :post, :class => 'card login-form' do %>
  <%= image_tag("FormLogo.png", :alt => 'FormImage', :class => 'FormImage') %>

  <!-- Form Contents -->
  <div class="card-body">

    <!-- Email -->
    <%= label_tag :email, 'Email Address', :class => 'login-email-label' %> <br>
    <%= email_field_tag :email, nil  ,:placeholder => 'Email Address', :class => 'login-email form-control float-left' %>

    <!-- Password -->
    <%= label_tag :password, 'Password', :class => 'login-password-label' %> <br>
    <%= password_field_tag :password, nil , :placeholder => 'Password', :class => 'login-password form-control float-left' %>

    <br>

    <!-- Finalization -->
    <%= submit_tag "JumpIn", :class => 'signup-button-main btn btn-primary lead' %>

  </div>

<% end %>


<% yield %>
</body>





</html>