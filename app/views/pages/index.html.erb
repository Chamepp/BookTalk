<!-- Navigation Bar -->
<div class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

    <header class="masthead mb-auto">
      <div class="inner">

        <!-- NavItems -->
        <nav class="navbar">


          <div class="nav-item">

            <!-- Logo Brand -->
            <%= link_to root_path do %>
              <%= image_tag("RootLogo.png", :alt => "RootLogo", :class => "RootlLogo") %>
            <% end %>

            <!-- Link Tags -->
            <%= link_to "Home", url: root_path, :class => 'nav-link' %>
            <%= link_to "Explore", url: root_path, :class => 'nav-link' %>
            <%= link_to "About", url: root_path, :class => 'nav-link' %>

            <!-- SignUp & Login Buttons -->
            <%= link_to "LogIn", root_path, :class => 'btn btn-primary' %>
            <%= link_to "SignUp", root_path, :class => 'btn btn-primary' %>

          </div>


        </nav>

      </div>
    </header>

  </div>

</div>