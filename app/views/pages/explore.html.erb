<!DOCTYPE html>
<html>
<!-- Navigation Bar -->
<div class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

    <header class="masthead mb-auto">
      <div class="inner">

        <!-- NavItems -->
        <nav class="navbar">

          <!-- Logo Brand -->
          <%= image_tag("RootLogo.png", :alt => "RootLogo", :class => "RootlLogo") %>


          <div class="nav-item">

            <!-- Link Tags -->
            <%= link_to "Home", root_path %>
            <%= link_to "Explore", explore_path %>
            <%= link_to "About", root_path %>

          </div>



          <!-- SignUp & Login Buttons -->
          <div class="nav-buttons">

            <%= link_to "LogIn", root_path, :class => 'btn btn-primary login-button' %>
            <%= link_to "SignUp", signup_path, :class => 'btn btn-primary signup-button' %>

          </div>


        </nav>

      </div>
    </header>

  </div>

</div>





<!-- Body Contents -->
<body>


<h1 class="main-text text-center">Explore Between</h1>
<h1 class="sub-text text-center">+ 32,000 Ebooks</h1>
<input type="text" placeholder="Search Over +35,000" class="searchbar text-center form-control">


<% yield %>
</body>





</html>